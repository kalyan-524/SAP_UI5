<mvc:View controllerName="project1.controller.Project"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <Table id = "ProductID" items="{/Products}" mode="SingleSelect">
    <headerToolbar>
         <Toolbar>
            <content>
            <Title text="Product Table"/>
            <ToolbarSpacer/>
            <SearchField width="20%" change="Onchange"/>
            <Button icon="sap-icon://sort" press="onSortPress"/>
            <Button icon="sap-icon://add" press="onaddPress"/>
            <Button icon="sap-icon://edit" press="oneditPress"/>
            </content>
         </Toolbar>
      </headerToolbar>
    <columns>
    <Column width="10rem">
            <Text text="Product Id"/>
     </Column>
     <Column>
        <Text text="Product Name"/>
     </Column>
     <Column>
        <Text text="Product Description"/>
     </Column>
     <Column>
        <Text text="Location"/>
     </Column>
     <Column>
        <Text text="Cost Center"/>
     </Column>
     <Column>
        <Text text="Status"/>
     </Column>
     <Column>
        <Text text="Action"/>
     </Column>
    </columns>
    <items>
        <ColumnListItem type="Navigation" press="onProductrowpress">
        <cells>
        <Text text="{ProductId}"/>
        <Text text="{ProductName}"/>
        <Text text="{ProductDescription}"/>
        <Text text="{Location}"/>
        <Text text="{CostCenter}"/>
        <ObjectStatus text="{Status}" state="{=${Status} === 'Active' ? 'Success' : 'Error'}"/>
        <Button text="delete" icon="sap-icon://delete" press="ondeletepress"/>
        </cells>
        </ColumnListItem>
    </items>
    </Table>
    </Page>
</mvc:View>