<mvc:View controllerName="project1.controller.productdetailspage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <Page id="productdetails" title="{i18n>productdetails}" showNavButton="true" navButtonPress="onNavigationBack">
    <f:SimpleForm>
        <f:content>
            <Label text="Product Name"/>
            <Input value="{productDetailModel>/ProductName}"/>
            <Label text="Product Description"/>
            <Input value="{productDetailModel>/ProductDescription}"/>
            <Label text="Location"/>
            <Input value="{productDetailModel>/Location}"/>
            <Label text="Cost Center"/>
            <Input value="{productDetailModel>/CostCenter}"/>
        </f:content>
    </f:SimpleForm>
    </Page>
</mvc:View>
 